FROM pytorch/pytorch:1.10.0-cuda11.3-cudnn8-runtime

WORKDIR /app

RUN apt-get update && apt-get install -y \
    git \
    && rm -rf /var/lib/apt/lists/*

RUN git clone https://github.com/facebookresearch/detr.git /app/detr

WORKDIR /app/detr

RUN wget --quiet https://repo.anaconda.com/miniconda/Miniconda3-latest-Linux-x86_64.sh && \
    bash Miniconda3-latest-Linux-x86_64.sh -b -p /opt/conda && \
    rm Miniconda3-latest-Linux-x86_64.sh
ENV PATH /opt/conda/bin:$PATH

RUN conda install -c pytorch pytorch torchvision \
    && conda install cython scipy \
    && pip install -U 'git+https://github.com/cocodataset/cocoapi.git#subdirectory=PythonAPI' \
    && pip install git+https://github.com/cocodataset/panopticapi.git

ENV NCCL_P2P_DISABLE 1

CMD ["python", "main.py", "--batch_size", "2", "--no_aux_loss", "--eval", "--resume", "https://dl.fbaipublicfiles.com/detr/detr-r50-e632da11.pth", "--coco_path", "/path/to/coco"]